<?xml version="1.0" encoding="UTF-8"?>

<assembly>
    <id>bin</id>

    <baseDirectory>bistoury-agent-bin</baseDirectory>

    <formats>
        <format>dir</format>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <includes>
                <include>bin/**</include>
            </includes>
            <fileMode>0755</fileMode>
            <lineEnding>keep</lineEnding>
        </fileSet>
    </fileSets>

    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <unpack>false</unpack>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
    </dependencySets>
</assembly>